<!DOCTYPE html5>
<html lang="en">
<head>
    <title>KW Doughnut System</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <script>
        function increase(target)
        {
            var ori = parseInt(document.getElementById(target).value);
            max = (target == "boxQnt") ? 300 : 3600;
            document.getElementById(target).value = (ori+1 < max) ? ori + 1 : max;
        }

        function decrease(target)
        {
            var ori = parseInt(document.getElementById(target).value);
            document.getElementById(target).value = (ori > 0) ? ori - 1 : 0;
        }
    </script>
    <style>
        div {
            width: 100%;
            padding: 25px;
            border: 25px;
            margin: 25px;
        }
    </style>
</head>
<body>
  <div>
    <h1>Seller</h1>
    <form method="post" action="submitOrder">
        <span>
            <p>Quantity of Box
                <input type="button" value="-" name='boxDec' onclick="decrease('boxQnt')" />
                <input type="number" min=0 max=300 value=0 name="boxQuantity" ID="boxQnt" />
                <input type="button" value="+" name='boxInc' onclick="increase('boxQnt')" />
            </p>
        </span>
        <span>
            <p>Quantity of Doughnut
                <input type="button" value="-" name='dDec' onClick="decrease('dQnt')" />
                <input type="number" min=0 max=3600 value=0 name="doughnutQuantity" ID="dQnt"/>
                <input type="button" value="+" name='dInc' onClick="increase('dQnt')" />
            </p>
        </span>
        <span><input type="checkbox" name="defer" value=0>Defer Payment</span><br>
        <span><input type="submit" value="Submit"><input type="reset" value="Reset"></span>
    </form>
  </div>
</body>
</html>